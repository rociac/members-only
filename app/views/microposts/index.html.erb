<div class = "container">
<div class="col-md-6 col-md-offset-3">
<%= link_to 'Create Posts', new_micropost_path, class: 'btn btn-primary' %>

<% @microposts.each do |post| %>
  <h2> <%= post.title %> </h2>
  <p> <%= post.content %> </p>

  <% if logged_in? %>

  <p> Author: 
  <%= post.user.name %> </p>
  <% end %>



<% end %>

</div>
</div>
